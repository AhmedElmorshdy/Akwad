<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/background"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="31dp"
            android:layout_height="25dp"
            android:layout_gravity="start"
            android:src="@drawable/ic_baseline_search_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.141"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.578" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="161dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:src="@drawable/akwad1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.601"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recy_sliders"
            android:orientation="horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الاكثر خصما"
            android:textColor="#000"
            android:layout_marginTop="220dp"

            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginStart="270dp"/>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="270dp"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recy_biggestCoupon"
            android:orientation="horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الاكثر طلبا"
            android:textColor="#000"

            android:textStyle="bold"
            android:layout_marginTop="480dp"
            android:textSize="18dp"
            android:layout_marginStart="280dp"/>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="520dp"
            android:layout_gravity="start"
            android:layout_marginStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recy_most_clicked"
            android:layout_marginBottom="70dp"
            android:orientation="horizontal"/>



        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="700dp"
            android:layout_gravity="start"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recy_mid_Banner"
            android:layout_marginBottom="80dp"

            android:orientation="horizontal"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" اجدث الاكواد"
            android:textColor="#000"

            android:textStyle="bold"
            android:layout_marginTop="910dp"
            android:textSize="18dp"
            android:layout_marginStart="255dp"/>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="960dp"
            android:layout_gravity="start"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recy_orderd"
            android:layout_marginBottom="70dp"

            android:orientation="horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" كوبونات عشوائية"
            android:textColor="#000"

            android:textStyle="bold"
            android:layout_marginTop="1170dp"
            android:textSize="18dp"
            android:layout_marginBottom="70dp"
            android:layout_marginStart="225dp"/>



        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="1220dp"
            android:layout_gravity="start"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recy_random"
            android:layout_marginBottom="80dp"


            android:orientation="horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" تسوق"
            android:textColor="#000"

            android:textStyle="bold"
            android:layout_marginTop="1435dp"
            android:textSize="18dp"
            android:layout_marginBottom="70dp"
            android:layout_marginStart="295dp"/>



        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="1490dp"
            android:layout_gravity="start"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recy_maarketing"
            android:layout_marginBottom="80dp"


            android:orientation="horizontal"/>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" سفر"
            android:textColor="#000"

            android:textStyle="bold"
            android:layout_marginTop="1700dp"
            android:textSize="18dp"
            android:layout_marginBottom="70dp"
            android:layout_marginStart="305dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" خدمات"
            android:textColor="#000"

            android:textStyle="bold"
            android:layout_marginTop="1750dp"
            android:textSize="18dp"
            android:layout_marginBottom="70dp"
            android:layout_marginStart="295dp"/>





        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="1800dp"
            android:layout_gravity="start"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recy_servicing"
            android:layout_marginBottom="80dp"


            android:orientation="horizontal"/>



    </FrameLayout>
</androidx.core.widget.NestedScrollView>











    </LinearLayout>